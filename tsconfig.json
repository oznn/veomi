{
  "compilerOptions": {
    "incremental": true,
    "target": "es2022",
    "module": "commonjs",
    "lib": ["dom", "es2022"],
    "jsx": "react-jsx",
    "strict": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": ".erb/dll",
    "paths": {
      "@assets/*": ["./assets/*"],
      "@types": ["./src/renderer/types.d.ts"],
      "@components/*": ["./src/renderer/app/components/*"],
      "@styles/*": ["./src/renderer/app/styles/*"],
      "@extensions/*": ["./src/renderer/ext/extensions/*"],
    }
  },
  "exclude": ["test", "release/build", "release/app/dist", ".erb/dll"]
}
